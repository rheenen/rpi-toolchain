#!/bin/bash

# find base
export RPITOOLCHAIN_BASE=`readlink -f \`dirname ${BASH_SOURCE}\``

# hardfp
export RPIFIRMWARE="${RPITOOLCHAIN_BASE}/firmware/hardfp"
export RPITOOLCHAIN_HOST="x86-linux64-cross-arm-linux-hardfp"

# softfp
#export RPIFIRMWARE="${RPITOOLCHAIN_BASE}/firmware"
#export RPITOOLCHAIN_HOST="linux-x86"

# find target
export RPITOOLCHAIN="${RPITOOLCHAIN_BASE}/tools/arm-bcm2708/${RPITOOLCHAIN_HOST}"
export RPITOOLCHAIN_TARGET=`find ${RPITOOLCHAIN_BASE}/tools/arm-bcm2708/${RPITOOLCHAIN_HOST}/bin/ -type f -iname arm-*-gcc | xargs -ixxx basename xxx -gcc`
